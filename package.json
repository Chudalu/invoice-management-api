    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^11.0.6",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/sequelize": "^11.0.0",
    "@nestjs/swagger": "^11.0.3",
    "@nestjs/websockets": "^11.0.6",
    "amqplib": "^0.10.5",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "graphql": "^16.6.0",
    "graphql-ws": "^5.13.1",
